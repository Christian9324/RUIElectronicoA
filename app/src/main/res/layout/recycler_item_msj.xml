<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textIsSelectable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="end">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/margin_basic05"
        android:layout_marginLeft="@dimen/margin_basic05"
        android:layout_marginTop="@dimen/margin_basic1"
        android:layout_marginBottom="@dimen/margin_basic1"
        android:background="@drawable/mensaje_color">

        <TextView
            android:id="@+id/mensajeDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_basic05"
            android:paddingRight="@dimen/margin_basic05"
            android:layout_marginLeft="@dimen/margin_basic05"
            android:layout_marginRight="@dimen/margin_basic05"
            android:layout_marginBottom="1dp"
            android:textIsSelectable="true"
            android:focusable="true"
            android:hint="@string/msj_resumen"
            android:textSize="18sp"
            android:padding="2dp"
            android:lineSpacingExtra="0.8dp"
            android:lineSpacingMultiplier="0.7"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>