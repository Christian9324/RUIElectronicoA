<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingRight="@dimen/margin_basic2"
    android:paddingLeft="@dimen/margin_basic3"
    android:paddingTop="@dimen/margin_basic05"
    android:paddingBottom="@dimen/margin_basic05"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_gris_toast">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LLENAR PARA CONTINUAR"
        android:textColorHint="@color/yellow"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_error_24"
        android:paddingLeft="@dimen/margin_basic1"
        android:tint="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/textview" />

</LinearLayout>